<li id="<%= post.id %>">
  <div class="avatar_post">
    <%= link_to picture_for(post.user), user_path(post.user) %>
  <span class="user">
    <%= link_to post.user.name, post.user %>
  </span>
  <span>
    <h4><%= link_to post.title, post_path(post) %></h4>
  </span>
  <span class="timestamp">
    <%= t ".posted" %> <%= time_ago_in_words(post.created_at) %> <%= t ".ago" %>
    <% if user_signed_in? %>
      <% if current_user.id == post.user_id %>
        <%= link_to t(".delete"), post, method: :delete,
         data: {confirm: t(".sure?")} %>
      <% end %>
    <% end %>
  </span>
</li>
