<div class="profile-body">
  <div class="col-md-8 content">
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#post"><%= t ".posts" %></a></li>
      <li><a data-toggle="tab" href="#menu1"><%= t ".follower" %></a></li>
      <li><a data-toggle="tab" href="#menu2"><%= t ".following" %></a></li>
    </ul>

    <div class="tab-content">
      <div id="post" class="tab-pane fade in active">
        <% @posts.each do |post| %>
          <div>
             <div class="avatar-post">
              <div class="circle-1"></div>
              <div class="circle-2"></div>
              <%= link_to picture_for(post.user), user_path(post.user) %>
              <h1><%= link_to post.title, post_path(post) %></h1>
              <div class="by">
                <a href="">
                  <span class="label label-info"><%= post.user.name %></span>
                </a>
              </div>
            </div>
          </div>
          <p style="margin-top: 10px;"><%= post.content[0..500].to_s.html_safe %></p>
          <div>
            <span class="badge">
              <%= t ".post_on" %> <%= post.created_at.strftime(t ".date_format") %></span>
              <div class="pull-right">
                <a href="">
                  <span class="label label-primary"><%= t ".story" %></span>
                </a>
              </div>
          <hr class="stylehr">
          </div>
      <% end %>
      <%= paginate @posts, :theme => "twitter-bootstrap-3" %>
      </div>
      <div id="menu1" class="tab-pane fade">
        <%= render "user", object: @users_follow %>
        <%= paginate @users_follow, :theme => "twitter-bootstrap-3" %>
      </div>
      <div id="menu2" class="tab-pane fade">
        <%= render "user", object: @users_following %>
        <%= paginate @users_following, :theme => "twitter-bootstrap-3" %>
      </div>

    </div>
  </div>

 <div class="col-md-4">
    <div class="profile">
      <div class="avatar-post image">
        <div class="circle-1"></div>
        <div class="circle-2"></div>
         <%= link_to picture_for(@user), user_path(@user) %>
      </div>

      <div class="name"><%= @user.name %></div>
      <div class="job"><%= @user.email %></div>

      <div class="actions">
        <% if user_signed_in? %>
          <% if current_user == @user %>
            <%= link_to t(".edit"), edit_user_registration_path, class: "btn" %>
          <% else %>
            <%= render "follow_form" %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="stats">
      <div class="box">
        <span class="value"><%= @user.posts.size %></span>
        <span class="parameter"><%= t ".posts" %></span>
      </div>
      <div class="box">
        <span class="value" id="following"><%= @user.following.size %></span>
        <span class="parameter"><%= t ".following" %></span>
      </div>
      <div class="box">
        <span class="value followers" ><%= @user.followers.size %></span>
        <span class="parameter"><%= t ".follower" %></span>
      </div>
    </div>
    </div>
</div>
